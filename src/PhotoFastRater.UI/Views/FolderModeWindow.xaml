<Window x:Class="PhotoFastRater.UI.Views.FolderModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Photo Fast Rater - フォルダモード" Height="800" Width="1400"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ツールバー -->
        <ToolBar Grid.Row="0" Padding="8">
            <Button Content="フォルダを開く"
                    Command="{Binding OpenFolderCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
            <Separator Margin="8,0"/>
            <TextBlock Text="統計:" VerticalAlignment="Center" Margin="8,0"/>
            <TextBlock Text="{Binding RatedPhotos, StringFormat='評価済み: {0}枚'}"
                      VerticalAlignment="Center"
                      Margin="4,0"/>
            <TextBlock Text="{Binding TotalPhotos, StringFormat='/ 合計: {0}枚'}"
                      VerticalAlignment="Center"
                      Margin="4,0"/>
            <Separator Margin="8,0"/>
            <Button Content="セッション保存"
                    Command="{Binding SaveSessionCommand}"
                    Margin="8,0,0,0"/>
            <Button Content="DBに追加"
                    Command="{Binding ExportToDbCommand}"
                    Margin="8,0,0,0"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </ToolBar>

        <!-- メインコンテンツ -->
        <Grid Grid.Row="1" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- 写真グリッド -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Photos}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="200" Height="200" Margin="4"
                                    BorderBrush="Gray" BorderThickness="1"
                                    Background="White"
                                    Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick"
                                                 Command="{Binding DataContext.SelectPhotoCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                 CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                <Grid>
                                    <Image Source="{Binding Thumbnail}"
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                    <StackPanel VerticalAlignment="Bottom"
                                               Background="#80000000"
                                               Margin="4">
                                        <TextBlock Text="{Binding FileName}"
                                                  Foreground="White"
                                                  FontSize="10"
                                                  TextTrimming="CharacterEllipsis"
                                                  Margin="4"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="★"
                                                      Foreground="Yellow"
                                                      FontSize="12"/>
                                            <TextBlock Text="{Binding Rating}"
                                                      Foreground="White"
                                                      FontSize="10"
                                                      Margin="2,0"/>
                                            <TextBlock Text="♥"
                                                      Foreground="Red"
                                                      FontSize="12"
                                                      Margin="8,0,0,0"
                                                      Visibility="{Binding IsFavorite, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- サイドパネル -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1,0,0,0" Padding="8">
                <StackPanel>
                    <TextBlock Text="選択中の写真"
                              FontSize="16"
                              FontWeight="Bold"
                              Margin="0,0,0,16"/>

                    <TextBlock Text="{Binding SelectedPhoto.FileName}"
                              TextWrapping="Wrap"
                              Margin="0,0,0,8"/>

                    <!-- レーティング -->
                    <TextBlock Text="レーティング"
                              FontWeight="Bold"
                              Margin="0,16,0,4"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="0" Command="{Binding SetRatingCommand}" Margin="2">
                            <Button.CommandParameter>
                                <sys:Int32>0</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                        <Button Content="1" Command="{Binding SetRatingCommand}" Margin="2">
                            <Button.CommandParameter>
                                <sys:Int32>1</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                        <Button Content="2" Command="{Binding SetRatingCommand}" Margin="2">
                            <Button.CommandParameter>
                                <sys:Int32>2</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                        <Button Content="3" Command="{Binding SetRatingCommand}" Margin="2">
                            <Button.CommandParameter>
                                <sys:Int32>3</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                        <Button Content="4" Command="{Binding SetRatingCommand}" Margin="2">
                            <Button.CommandParameter>
                                <sys:Int32>4</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                        <Button Content="5" Command="{Binding SetRatingCommand}" Margin="2">
                            <Button.CommandParameter>
                                <sys:Int32>5</sys:Int32>
                            </Button.CommandParameter>
                        </Button>
                    </StackPanel>

                    <!-- クイックアクション -->
                    <TextBlock Text="クイックアクション"
                              FontWeight="Bold"
                              Margin="0,16,0,4"/>
                    <Button Content="お気に入り"
                           Command="{Binding ToggleFavoriteCommand}"
                           Margin="0,4"/>
                    <Button Content="リジェクト"
                           Command="{Binding ToggleRejectCommand}"
                           Margin="0,4"/>

                    <!-- EXIF情報 -->
                    <TextBlock Text="EXIF情報"
                              FontWeight="Bold"
                              Margin="0,16,0,4"/>
                    <TextBlock Text="{Binding SelectedPhoto.CameraModel, StringFormat='カメラ: {0}'}"
                              Margin="0,2"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- ステータスバー -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding FolderPath}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
